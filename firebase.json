{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ]
    }
  ],
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**/submitForm",
        "function": "app"
      },
      {
        "source": "**/index.html",
        "destination": "/index.html"
      },
      {
        "source": "**/style.css",
        "destination": "/css/styles.css"
      },
      {
        "source": "**/index.js",
        "destination": "/index.js"
      }
    ]
  }
}
